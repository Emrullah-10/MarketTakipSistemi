<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketSitesi</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MarketSitesi.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
</head>
<body class="dark-theme">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-warning mb-3 shadow-lg">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold fs-3 text-warning" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store me-2"></i>MarketSitesi
                </a>
                <button class="navbar-toggler border-warning" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light hover-orange fs-5 fw-semibold px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i> Ana Sayfa
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light hover-orange fs-5 fw-semibold px-3" asp-area="" asp-controller="Kategori" asp-action="Index">
                                <i class="fas fa-tags me-2"></i> Kategoriler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light hover-orange fs-5 fw-semibold px-3" asp-area="" asp-controller="Yiyecek" asp-action="Index">
                                <i class="fas fa-utensils me-2"></i> Yiyecekler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light hover-orange fs-5 fw-semibold px-3" asp-area="" asp-controller="Icecek" asp-action="Index">
                                <i class="fas fa-coffee me-2"></i> İçecekler
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-4">
        <main role="main" class="pb-5 mb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark border-top border-warning footer text-light mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-warning mb-3"><i class="fas fa-store me-2"></i>MarketSitesi</h5>
                    <p class="mb-0">Modern ve kullanıcı dostu market yönetim sistemi</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-0">&copy; 2025 - MarketSitesi</p>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-warning text-decoration-none">Gizlilik Politikası</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
