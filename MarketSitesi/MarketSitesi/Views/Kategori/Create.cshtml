@model MarketSitesi.Models.Kategori

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<div class="container-fluid px-4 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header -->
            <div class="text-center mb-4 fade-in">
                <h1 class="display-5 fw-bold text-warning mb-2">
                    <i class="fas fa-plus-circle icon-glow me-3"></i>Yeni Kategori Ekle
                </h1>
                <p class="text-light fs-5">Yeni bir ürün kategorisi oluşturun</p>
            </div>

            <!-- Form Card -->
            <div class="card-dark slide-in-left">
                <div class="card-header">
                    <h3 class="mb-0 text-center">
                        <i class="fas fa-tag me-2"></i>Kategori Bilgileri
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Ad" class="form-label text-warning fw-bold fs-5">
                                <i class="fas fa-tag me-2"></i>Kategori Adı
                            </label>
                            <input asp-for="Ad" class="form-control form-control-dark fs-5 py-3" placeholder="Kategori adını girin" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Aciklama" class="form-label text-warning fw-bold fs-5">
                                <i class="fas fa-info-circle me-2"></i>Açıklama
                            </label>
                            <textarea asp-for="Aciklama" class="form-control form-control-dark fs-5" rows="4" placeholder="Kategori açıklamasını girin"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-5 mb-5" style="margin-bottom: 8rem !important;">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-orange btn-lg px-5">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
