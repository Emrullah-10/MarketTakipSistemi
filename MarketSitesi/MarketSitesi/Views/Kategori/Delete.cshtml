@model MarketSitesi.Models.Kategori

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Kategori Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Dikkat!</strong> Bu kategoriyi silmek istediğinizden emin misiniz?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Ad)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Ad)</dd>
                        
                        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Aciklama)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Aciklama)</dd>
                        
                        <dt class="col-sm-3">Yiyecek Sayısı</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-primary">@Model.Yiyecekler.Count</span>
                        </dd>
                    </dl>

                    @if (Model.Yiyecekler.Any())
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            <strong>Uyarı:</strong> Bu kategoride @Model.Yiyecekler.Count adet yiyecek bulunmaktadır. 
                            Kategoriyi silerseniz, bu yiyecekler de silinecektir.
                        </div>
                    }

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Extra spacing for footer -->
    <div style="height: 2rem;"></div>
</div>
