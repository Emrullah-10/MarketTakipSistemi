@model IEnumerable<MarketSitesi.Models.Yiyecek>

@{
    ViewData["Title"] = "Yiyecekler";
}

<div class="container-fluid px-4 mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Section -->
            <div class="d-flex justify-content-between align-items-center mb-4 fade-in">
                <div>
                    <h1 class="display-5 fw-bold text-warning mb-2">
                        <i class="fas fa-utensils icon-glow me-3"></i>Yiyecekler
                    </h1>
                    <p class="text-light fs-5">Yiyecek ürünlerinizi yönetin ve organize edin</p>
                </div>
                <a asp-action="Create" class="btn btn-orange btn-lg px-4">
                    <i class="fas fa-plus me-2"></i>Yeni Yiyecek Ekle
                </a>
            </div>

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert-orange alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Yiyecekler Table -->
            <div class="card-dark slide-in-left">
                <div class="card-header">
                    <h3 class="mb-0 text-center">
                        <i class="fas fa-list me-2"></i>Yiyecek Listesi
                    </h3>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark-custom mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-4">
                                            <i class="fas fa-utensils me-2"></i>@Html.DisplayNameFor(model => model.Ad)
                                        </th>
                                        <th>
                                            <i class="fas fa-info-circle me-2"></i>@Html.DisplayNameFor(model => model.Aciklama)
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-tag me-2"></i>Kategori
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-lira-sign me-2"></i>@Html.DisplayNameFor(model => model.Fiyat)
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-boxes me-2"></i>@Html.DisplayNameFor(model => model.StokAdedi)
                                        </th>
                                        <th class="text-center pe-4">
                                            <i class="fas fa-cogs me-2"></i>İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="fade-in">
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="fas fa-hamburger fa-2x icon-orange"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="text-warning fs-5">@Html.DisplayFor(modelItem => item.Ad)</strong>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-light">@Html.DisplayFor(modelItem => item.Aciklama)</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-warning text-dark fs-6 px-3 py-2">
                                                    <i class="fas fa-tag me-1"></i>@Html.DisplayFor(modelItem => item.Kategori.Ad)
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <span class="text-warning fw-bold fs-5">@Html.DisplayFor(modelItem => item.Fiyat) ₺</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @(item.StokAdedi > 10 ? "bg-success" : item.StokAdedi > 0 ? "bg-warning" : "bg-danger") text-dark fs-6 px-3 py-2">
                                                    <i class="fas fa-boxes me-1"></i>@Html.DisplayFor(modelItem => item.StokAdedi)
                                                </span>
                                            </td>
                                            <td class="text-center pe-4">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm me-1">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm me-1">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-4">
                                <i class="fas fa-utensils fa-5x text-muted opacity-50"></i>
                            </div>
                            <h3 class="text-muted mb-3">Henüz yiyecek eklenmemiş</h3>
                            <p class="text-muted fs-5 mb-4">İlk yiyeceğinizi eklemek için yukarıdaki butonu kullanın.</p>
                            <a asp-action="Create" class="btn btn-orange btn-lg">
                                <i class="fas fa-plus me-2"></i>İlk Yiyeceğinizi Ekleyin
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Extra spacing for footer -->
    <div style="height: 2rem;"></div>
</div>
