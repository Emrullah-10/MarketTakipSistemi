@model MarketSitesi.Models.Icecek

@{
    ViewData["Title"] = "İçecek Sil";
}

<div class="container-fluid px-4 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header -->
            <div class="text-center mb-4 fade-in">
                <h1 class="display-5 fw-bold text-danger mb-2">
                    <i class="fas fa-exclamation-triangle icon-glow me-3"></i>İçecek Sil
                </h1>
                <p class="text-light fs-5">Bu içeceği silmek istediğinizden emin misiniz?</p>
            </div>

            <!-- Warning Card -->
            <div class="card-dark slide-in-left">
                <div class="card-header bg-danger">
                    <h3 class="mb-0 text-center text-white">
                        <i class="fas fa-trash me-2"></i>Silme Onayı
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz. İçecek kalıcı olarak silinecektir.
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-4">
                                <div class="me-3">
                                    <i class="fas fa-coffee fa-3x text-danger"></i>
                                </div>
                                <div>
                                    <h5 class="text-warning mb-1">İçecek Adı</h5>
                                    <p class="text-light fs-5 mb-0">@Html.DisplayFor(model => model.Ad)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-4">
                                <div class="me-3">
                                    <i class="fas fa-utensils fa-3x text-danger"></i>
                                </div>
                                <div>
                                    <h5 class="text-warning mb-1">Yiyecek</h5>
                                    <p class="text-light fs-5 mb-0">@Html.DisplayFor(model => model.Yiyecek.Ad)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-4">
                                <div class="me-3">
                                    <i class="fas fa-lira-sign fa-3x text-danger"></i>
                                </div>
                                <div>
                                    <h5 class="text-warning mb-1">Fiyat</h5>
                                    <p class="text-light fs-5 mb-0">@Html.DisplayFor(model => model.Fiyat) ₺</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-4">
                                <div class="me-3">
                                    <i class="fas fa-boxes fa-3x text-danger"></i>
                                </div>
                                <div>
                                    <h5 class="text-warning mb-1">Stok Adedi</h5>
                                    <p class="text-light fs-5 mb-0">@Html.DisplayFor(model => model.StokAdedi)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-4">
                                <div class="me-3">
                                    <i class="fas fa-weight fa-3x text-danger"></i>
                                </div>
                                <div>
                                    <h5 class="text-warning mb-1">Hacim</h5>
                                    <p class="text-light fs-5 mb-0">@Html.DisplayFor(model => model.Hacim)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="d-flex align-items-start mb-4">
                                <div class="me-3">
                                    <i class="fas fa-info-circle fa-3x text-danger"></i>
                                </div>
                                <div>
                                    <h5 class="text-warning mb-1">Açıklama</h5>
                                    <p class="text-light fs-5 mb-0">@Html.DisplayFor(model => model.Aciklama)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" class="mt-5 mb-5" style="margin-bottom: 8rem !important;">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-5">
                                <i class="fas fa-trash me-2"></i>Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
