@model MarketSitesi.Models.Icecek

@{
    ViewData["Title"] = "İçecek Düzenle";
}

<div class="container-fluid px-4 mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header -->
            <div class="text-center mb-4 fade-in">
                <h1 class="display-5 fw-bold text-warning mb-2">
                    <i class="fas fa-edit icon-glow me-3"></i>İçecek Düzenle
                </h1>
                <p class="text-light fs-5">İçecek bilgilerini güncelleyin</p>
            </div>

            <!-- Form Card -->
            <div class="card-dark slide-in-left">
                <div class="card-header">
                    <h3 class="mb-0 text-center">
                        <i class="fas fa-coffee me-2"></i>İçecek Bilgileri
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-4">
                            <label asp-for="Ad" class="form-label text-warning fw-bold fs-5">
                                <i class="fas fa-coffee me-2"></i>İçecek Adı
                            </label>
                            <input asp-for="Ad" class="form-control form-control-dark fs-5 py-3" placeholder="İçecek adını girin" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Aciklama" class="form-label text-warning fw-bold fs-5">
                                <i class="fas fa-info-circle me-2"></i>Açıklama
                            </label>
                            <textarea asp-for="Aciklama" class="form-control form-control-dark fs-5" rows="4" placeholder="İçecek açıklamasını girin"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Fiyat" class="form-label text-warning fw-bold fs-5">
                                        <i class="fas fa-lira-sign me-2"></i>Fiyat
                                    </label>
                                    <input asp-for="Fiyat" class="form-control form-control-dark fs-5 py-3" placeholder="0.00" step="0.01" />
                                    <span asp-validation-for="Fiyat" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="StokAdedi" class="form-label text-warning fw-bold fs-5">
                                        <i class="fas fa-boxes me-2"></i>Stok Adedi
                                    </label>
                                    <input asp-for="StokAdedi" class="form-control form-control-dark fs-5 py-3" placeholder="0" />
                                    <span asp-validation-for="StokAdedi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Hacim" class="form-label text-warning fw-bold fs-5">
                                        <i class="fas fa-weight me-2"></i>Hacim
                                    </label>
                                    <input asp-for="Hacim" class="form-control form-control-dark fs-5 py-3" placeholder="500ml" />
                                    <span asp-validation-for="Hacim" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="YiyecekId" class="form-label text-warning fw-bold fs-5">
                                        <i class="fas fa-utensils me-2"></i>Yiyecek
                                    </label>
                                    <select asp-for="YiyecekId" class="form-control form-control-dark fs-5 py-3" asp-items="ViewBag.YiyecekId">
                                        <option value="">Yiyecek seçin</option>
                                    </select>
                                    <span asp-validation-for="YiyecekId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between mt-5 mb-5" style="margin-bottom: 8rem !important;">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-orange btn-lg px-5">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
